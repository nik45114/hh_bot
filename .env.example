# ==============================================
# Telegram Bot Configuration
# ==============================================
# Получите токен у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ID пользователя Telegram (получите у @userinfobot)
# Оставьте пустым, чтобы разрешить всем пользователям
ALLOWED_USER_ID=your_telegram_user_id

# ==============================================
# OpenAI Configuration
# ==============================================
# API ключ OpenAI для генерации сопроводительных писем
# Получите на https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ==============================================
# HeadHunter API Configuration
# ==============================================
# OAuth токен доступа к HH.ru API
# Инструкции по получению: https://github.com/hhru/api/blob/master/docs/authorization_for_application.md
HH_ACCESS_TOKEN=your_hh_access_token_here

# Refresh токен для обновления access token
HH_REFRESH_TOKEN=your_hh_refresh_token_here

# ID резюме для откликов (можно узнать через API /resumes/mine)
HH_RESUME_ID=your_resume_id_here

# Client ID и Client Secret вашего приложения на hh.ru
# Зарегистрируйте приложение на https://dev.hh.ru/admin
HH_OAUTH_CLIENT_ID=your_client_id
HH_OAUTH_CLIENT_SECRET=your_client_secret

# Base URL для HH API (обычно не требует изменения)
HH_API_BASE=https://api.hh.ru

# User-Agent для запросов к HH API (рекомендуется указать свой email)
HH_USER_AGENT=hh_bot/yourgithub (your@email.com)

# Legacy credentials (не рекомендуется, используйте OAuth)
HH_EMAIL=
HH_PASSWORD=

# ==============================================
# Search Settings (Defaults)
# ==============================================
# Ключевые слова для поиска (через запятую)
SEARCH_KEYWORDS=Python developer,Backend developer

# Интервал между проверками в минутах
SEARCH_INTERVAL_MINUTES=60

# Максимальное количество откликов в день
MAX_APPLICATIONS_PER_DAY=20

# ID региона по умолчанию (1 - Москва, 113 - Россия, 2 - СПб)
DEFAULT_AREA=1

# График работы по умолчанию (remote, fullDay, shift, flexible, flyInFlyOut)
DEFAULT_SCHEDULE=remote

# Требуемый опыт (noExperience, between1And3, between3And6, moreThan6)
DEFAULT_EXPERIENCE=between3And6

# Тип занятости (full, part, project, volunteer, probation)
DEFAULT_EMPLOYMENT=full

# Минимальная зарплата (0 - без ограничений)
MIN_SALARY=0

# ==============================================
# GitHub Settings (Optional)
# ==============================================
GITHUB_REPO=https://github.com/nik45114/hh_bot.git

# ==============================================
# Admin Settings
# ==============================================
# ID администраторов через запятую (получите у @userinfobot)
# Только эти пользователи смогут выполнять /update_code и /restart
ADMIN_CHAT_IDS=your_admin_id_1,your_admin_id_2

# ==============================================
# Monitoring Settings
# ==============================================
# Интервал проверки новых вакансий в секундах (по умолчанию 180 = 3 минуты)
HH_SEARCH_INTERVAL_SEC=180

# Ограничение запросов к HH.ru API (запросов в секунду)
HH_RATE_LIMIT_QPS=0.5

# ==============================================
# System Management Settings
# ==============================================
# Разрешить перезапуск systemd сервиса через бота (true/false)
ALLOW_SYSTEMCTL=false

# Имя systemd сервиса для перезапуска
SERVICE_NAME=hh_bot

# Путь установки бота (для git pull)
BOT_INSTALL_PATH=/opt/hh_bot
